---
import Layout from '../../../layouts/Layout.astro';
import { getArticlesByCategory, CATEGORIES } from '../../../data/articles';

export async function getStaticPaths() {
  // Only topical categories get their own page.
  // City categories are handled by their parent page (/{city}-ghost-tours/).
  return Object.entries(CATEGORIES)
    .filter(([_, info]) => info.type !== 'city')
    .map(([slug, info]) => ({
      params: { category: slug },
      props: { categorySlug: slug, categoryInfo: info },
    }));
}

const { categorySlug, categoryInfo } = Astro.props;
const articles = getArticlesByCategory(categorySlug);
articles.sort((a, b) => b.content.split(/\s+/).length - a.content.split(/\s+/).length);
const pillar = articles[0];
const clusters = articles.slice(1);
---

<Layout
  title={`${categoryInfo.name} Articles | Cursed Tours`}
  description={categoryInfo.description}
  canonical={`https://cursedtours.com/articles/category/${categorySlug}/`}
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": `${categoryInfo.name} Articles`,
    "description": categoryInfo.description,
    "url": `https://cursedtours.com/articles/category/${categorySlug}/`,
    "mainEntity": {
      "@type": "ItemList",
      "itemListElement": articles.map((a, i) => ({
        "@type": "ListItem",
        "position": i + 1,
        "name": a.title,
        "url": `https://cursedtours.com/articles/${a.slug}/`
      }))
    },
    "breadcrumb": {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://cursedtours.com/" },
        { "@type": "ListItem", "position": 2, "name": "Articles", "item": "https://cursedtours.com/articles/" },
        { "@type": "ListItem", "position": 3, "name": categoryInfo.name, "item": `https://cursedtours.com/articles/category/${categorySlug}/` }
      ]
    }
  })} />
  <section class="relative py-12 md:py-20 overflow-hidden bg-[#0a0510]">
    <div class="container relative z-10 px-4 mx-auto max-w-6xl">
      <nav class="mb-6 text-sm">
        <ol class="flex items-center gap-2 text-[#a89bb8]">
          <li><a href="/" class="hover:text-purple-400 transition-colors">Home</a></li>
          <li class="text-gray-600">/</li>
          <li><a href="/articles/" class="hover:text-purple-400 transition-colors">Articles</a></li>
          <li class="text-gray-600">/</li>
          <li class="text-gray-300 font-medium">{categoryInfo.name}</li>
        </ol>
      </nav>
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{categoryInfo.name}</h1>
        <p class="text-xl text-[#a89bb8] max-w-2xl mx-auto">{categoryInfo.description}</p>
        <p class="text-sm text-gray-500 mt-2">{articles.length} articles</p>
      </div>
    </div>
  </section>

  <section class="py-12 md:py-16 bg-[#0a0510]">
    <div class="container px-4 mx-auto max-w-6xl">
      {/* Pillar article */}
      {pillar && (
        <a
          href={`/articles/${pillar.slug}/`}
          class="group block mb-8 rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300 md:flex"
        >
          {pillar.featuredImage?.sourceUrl && (
            <div class="md:w-2/5 aspect-video md:aspect-auto overflow-hidden">
              <img
                src={pillar.featuredImage.sourceUrl}
                alt={pillar.featuredImage.altText || pillar.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                width="800"
                height="450"
                loading="lazy"
                decoding="async"
              />
            </div>
          )}
          <div class="p-6 md:w-3/5 flex flex-col justify-center">
            <span class="text-xs text-purple-400 font-medium uppercase tracking-wider mb-2">Start Here</span>
            <h2 class="text-xl md:text-2xl font-bold text-white group-hover:text-purple-400 transition-colors mb-3">
              {pillar.title}
            </h2>
            <p class="text-gray-400 line-clamp-3">{pillar.excerpt}</p>
            <span class="mt-4 text-sm text-gray-500">
              {Math.ceil(pillar.content.split(/\s+/).length / 250)} min read
            </span>
          </div>
        </a>
      )}

      {/* Cluster articles */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {clusters.map((article) => (
          <a
            href={`/articles/${article.slug}/`}
            class="group block rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300"
          >
            {article.featuredImage?.sourceUrl && (
              <div class="aspect-video overflow-hidden">
                <img
                  src={article.featuredImage.sourceUrl}
                  alt={article.featuredImage.altText || article.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  width="400"
                  height="225"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            )}
            <div class="p-4">
              <h3 class="text-white font-semibold group-hover:text-purple-400 transition-colors line-clamp-2 mb-2">
                {article.title}
              </h3>
              <p class="text-sm text-gray-400 line-clamp-2">{article.excerpt}</p>
              <span class="block mt-3 text-xs text-gray-500">
                {Math.ceil(article.content.split(/\s+/).length / 250)} min read
              </span>
            </div>
          </a>
        ))}
      </div>

      {/* Back to hub CTA */}
      {categoryInfo.hubPage && (
        <div class="mt-12 text-center">
          <a
            href={categoryInfo.hubPage}
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-purple-600 hover:bg-purple-500 text-white font-semibold transition-colors"
          >
            Browse Ghost Tours â†’
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
