---
import Layout from '../../layouts/Layout.astro';
import { getAllArticles, getArticlesByCategory, CATEGORIES } from '../../data/articles';

const allArticles = getAllArticles();
const categoryOrder = [
  'salem-witch-trials',
  'new-orleans-voodoo-haunted-history',
  'chicago-haunted-history',
  'dracula-gothic-literature',
  'tour-planning',
];
---

<Layout
  title="Ghost Tour Articles & Guides | Cursed Tours"
  description="In-depth articles on haunted history, the Salem witch trials, New Orleans voodoo, Dracula mythology, and practical ghost tour planning guides."
  canonical="https://cursedtours.com/articles/"
>
  <section class="relative py-12 md:py-20 overflow-hidden bg-[#0a0510]">
    <div class="container relative z-10 px-4 mx-auto max-w-7xl">
      <nav class="mb-6 text-sm">
        <ol class="flex items-center gap-2 text-[#a89bb8]">
          <li><a href="/" class="hover:text-purple-400 transition-colors">Home</a></li>
          <li class="text-gray-600">/</li>
          <li class="text-gray-300 font-medium">Articles</li>
        </ol>
      </nav>
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">Articles & Guides</h1>
        <p class="text-xl text-[#a89bb8] max-w-2xl mx-auto">
          Researched history, documented hauntings, and practical guides for ghost tour travelers.
        </p>
      </div>

      <!-- Category quick nav -->
      <nav class="overflow-x-auto pb-2">
        <div class="flex gap-2 md:gap-3 min-w-max md:justify-center">
          {categoryOrder.map((catSlug) => {
            const cat = CATEGORIES[catSlug];
            const count = getArticlesByCategory(catSlug).length;
            return (
              <a
                href={`#${catSlug}`}
                class="inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2.5 rounded-full bg-white/5 border border-white/10 hover:border-purple-500/50 hover:bg-white/10 transition-all duration-300"
              >
                <span class="text-xs md:text-sm text-gray-300">{cat.name}</span>
                <span class="text-xs text-gray-500">({count})</span>
              </a>
            );
          })}
        </div>
      </nav>
    </div>
  </section>

  {categoryOrder.map((catSlug) => {
    const cat = CATEGORIES[catSlug];
    const articles = getArticlesByCategory(catSlug);
    // Put pillar (longest) article first
    articles.sort((a, b) => b.content.split(/\s+/).length - a.content.split(/\s+/).length);
    const pillar = articles[0];
    const clusters = articles.slice(1);

    return (
      <section id={catSlug} class="py-12 md:py-16 bg-[#0a0510] border-t border-white/5">
        <div class="container px-4 mx-auto max-w-6xl">
          <div class="mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">{cat.name}</h2>
            <p class="text-gray-400">{cat.description}</p>
            {cat.hubPage && (
              <a href={cat.hubPage} class="inline-block mt-2 text-sm text-purple-400 hover:text-purple-300 transition-colors">
                Browse ghost tours â†’
              </a>
            )}
          </div>

          {/* Pillar article - featured large */}
          {pillar && (
            <a
              href={`/articles/${pillar.slug}/`}
              class="group block mb-8 rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300 md:flex"
            >
              {pillar.featuredImage?.sourceUrl && (
                <div class="md:w-2/5 aspect-video md:aspect-auto overflow-hidden">
                  <img
                    src={pillar.featuredImage.sourceUrl}
                    alt={pillar.featuredImage.altText || pillar.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-6 md:w-3/5 flex flex-col justify-center">
                <span class="text-xs text-purple-400 font-medium uppercase tracking-wider mb-2">Pillar Guide</span>
                <h3 class="text-xl md:text-2xl font-bold text-white group-hover:text-purple-400 transition-colors mb-3">
                  {pillar.title}
                </h3>
                <p class="text-gray-400 line-clamp-3">{pillar.excerpt}</p>
                <span class="mt-4 text-sm text-gray-500">
                  {Math.ceil(pillar.content.split(/\s+/).length / 250)} min read
                </span>
              </div>
            </a>
          )}

          {/* Cluster articles - grid */}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {clusters.map((article) => (
              <a
                href={`/articles/${article.slug}/`}
                class="group block rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300"
              >
                {article.featuredImage?.sourceUrl && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={article.featuredImage.sourceUrl}
                      alt={article.featuredImage.altText || article.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-4">
                  <h3 class="text-white font-semibold group-hover:text-purple-400 transition-colors line-clamp-2 mb-2">
                    {article.title}
                  </h3>
                  <p class="text-sm text-gray-400 line-clamp-2">{article.excerpt}</p>
                  <span class="block mt-3 text-xs text-gray-500">
                    {Math.ceil(article.content.split(/\s+/).length / 250)} min read
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    );
  })}
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
