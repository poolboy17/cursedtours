---
import Layout from '../layouts/Layout.astro';
import { getAllArticles } from '../data/articles';

const recentArticles = getAllArticles().slice(0, 4);

const featuredCities = [
  { name: 'New Orleans', slug: 'new-orleans-ghost-tours', image: '/images/city-hubs/new-orleans.webp', tagline: 'Voodoo, vampires & French Quarter hauntings', tours: '12+ tours' },
  { name: 'Savannah', slug: 'savannah-ghost-tours', image: '/images/city-hubs/savannah.webp', tagline: 'Colonial ghosts & moss-draped cemeteries', tours: '10+ tours' },
  { name: 'Salem', slug: 'salem-ghost-tours', image: '/images/city-hubs/salem.webp', tagline: 'Witch trial history & maritime hauntings', tours: '8+ tours' },
  { name: 'Edinburgh', slug: 'edinburgh-ghost-tours', image: '/images/city-hubs/edinburgh.webp', tagline: 'Underground vaults & bodysnatchers', tours: '10+ tours' },
  { name: 'London', slug: 'london-ghost-tours', image: '/images/city-hubs/london.webp', tagline: 'Jack the Ripper & Tower of London spirits', tours: '15+ tours' },
  { name: 'Charleston', slug: 'charleston-ghost-tours', image: '/images/city-hubs/charleston.webp', tagline: 'Civil War spirits & Lowcountry legends', tours: '8+ tours' },
