---
import Layout from '../layouts/Layout.astro';

const cities = [
  {
    name: 'New Orleans',
    slug: 'new-orleans-ghost-tours',
    image: '/images/city-hubs/new-orleans.webp'
  },
  {
    name: 'London',
    slug: 'london-ghost-tours',
    image: '/images/city-hubs/london.webp'
  },
  {
    name: 'Savannah',
    slug: 'savannah-ghost-tours',
    image: '/images/city-hubs/savannah.webp'
  },
  {
    name: 'Salem',
    slug: 'salem-ghost-tours',
    image: '/images/city-hubs/salem.webp'
  },
  {
    name: 'Edinburgh',
    slug: 'edinburgh-ghost-tours',
    image: '/images/city-hubs/edinburgh.webp'
  },
  {
    name: 'Rome',
    slug: 'rome-ghost-tours',
    image: '/images/city-hubs/rome.webp'
  },
  {
    name: 'Paris',
    slug: 'paris-ghost-tours',
    image: '/images/city-hubs/paris.webp'
  },
  {
    name: 'Charleston',
    slug: 'charleston-ghost-tours',
    image: '/images/city-hubs/charleston.webp'
  }
];

const featuredDestinations = [
  {
    title: "Enter Dracula's Castle",
    subtitle: "Featured Destination",
    description: "Where the Dracula legend lives.",
    link: "/destinations/draculas-castle/",
    image: "/images/draculas-castle-banner.jpg",
    color: "red"
  },
  {
    title: "Salem Witch Trials",
    subtitle: "Featured Destination", 
    description: "The infamous trials that gripped colonial Massachusetts.",
    link: "/destinations/salem-witch-trials/",
    image: "/images/banners/salem-witch-trials.jpg",
    color: "amber"
  },
  {
    title: "Unlock the Secrets of the Tower",
    subtitle: "Featured Destination",
    description: "Experience one of the world's most famous fortresses",
    link: "/destinations/tower-of-london/",
    image: "/images/banners/tower-of-london.png",
    color: "red"
  }
];
---

<Layout 
  title="Cursed Tours | Ghost Tours & Haunted History Worldwide"
  description="Discover haunted places, ghost tours, and paranormal experiences worldwide. Book your next supernatural adventure and explore spine-chilling dark history."
  canonical="https://cursedtours.com/"
>
  <!-- Hero Section - Matching Vercel deployment style -->
  <section class="relative py-6 lg:py-10">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="flex flex-col gap-6 md:flex-row md:items-center md:gap-8 lg:gap-12">
        <!-- Left: Content Card -->
        <div class="w-full md:w-2/5 lg:w-[45%]">
          <div class="space-y-4 rounded-3xl p-5 sm:p-8 shadow-lg backdrop-blur-lg" style="background: rgba(26, 16, 37, 0.6);">
            <div class="flex flex-wrap gap-2">
              <span class="inline-flex rounded-full px-3 py-1.5 text-xs font-semibold text-white shadow-sm sm:text-sm" style="background-color: #7c3aed;">
                Ghost Tours & Haunted Experiences
              </span>
            </div>
            <h1 class="text-2xl font-bold leading-tight sm:text-3xl lg:text-4xl xl:text-5xl text-white" style="font-family: 'Cinzel', serif;">
              Cursed Tours
            </h1>
            <p class="text-base leading-relaxed sm:text-lg lg:text-xl" style="color: #c8bdd8;">
              Uncover ghost tours, forbidden history, and unforgettable dark experiences around the world.
            </p>
            <!-- Search Box -->
            <form class="relative">
              <input 
                type="text" 
                placeholder="Search ghost tours, cities, or destinations..."
                class="w-full rounded-full border-2 py-3 pl-5 pr-14 text-base shadow-sm transition-colors focus:outline-none sm:py-4 sm:pl-6 sm:pr-16 sm:text-lg"
                style="border-color: #3d2a4d; background-color: #1a1025; color: white;"
              >
              <button 
                type="submit" 
                class="absolute right-2 top-1/2 -translate-y-1/2 rounded-full p-2.5 text-white transition-colors sm:p-3"
                style="background-color: #7c3aed;"
                aria-label="Search"
              >
                <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </button>
            </form>
          </div>
        </div>
        
        <!-- Right: Hero Image -->
        <div class="w-full md:w-3/5 lg:w-[55%]">
          <div class="relative aspect-[16/12] sm:aspect-[16/9] md:aspect-[16/14] lg:aspect-[16/10] overflow-hidden rounded-3xl">
            <img 
              src="/images/homepage-hero.webp"
              alt="Ghostly figure hiding beneath a table as visitors explore a haunted house"
              class="absolute inset-0 w-full h-full object-cover"
              loading="eager"
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="py-8 border-b" style="border-color: #3d2a4d;">
    <div class="container px-4 mx-auto max-w-7xl">
      <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">Curated Haunted Tours</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Hand-picked experiences in the world's most haunted cities.</p>
          </div>
        </li>
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zM12 2.25V4.5m5.834.166l-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243l-1.59-1.59"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">Instant Booking</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Secure checkout with immediate confirmation.</p>
          </div>
        </li>
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">Trusted Worldwide</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Thousands of travelers exploring haunted destinations globally.</p>
          </div>
        </li>
        <li class="flex items-start gap-3">
          <svg class="h-6 w-6 flex-shrink-0" style="color: #a89bb8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-white">No Hidden Fees</p>
            <p class="mt-1 text-sm" style="color: #7a6b8a;">Transparent pricing, no surprises.</p>
          </div>
        </li>
      </ul>
    </div>
  </section>


  <!-- About / SEO Content -->
  <section class="py-10 border-b" style="border-color: #3d2a4d;">
    <div class="container px-4 mx-auto max-w-4xl">
      <div class="text-center mb-8">
        <h2 class="text-xl font-semibold sm:text-2xl text-white" style="font-family: 'Cinzel', serif;">Ghost Tours That Start with Real History</h2>
      </div>
      <div class="text-base leading-relaxed space-y-4" style="color: #c8bdd8;">
        <p>
          Cursed Tours connects travelers with ghost tours rooted in documented history, not scripted entertainment. Every city we cover—from the colonial burial grounds of Boston to the voodoo traditions of New Orleans, from Edinburgh's underground vaults to the execution sites of London's Tower—has a haunted reputation built on real events: epidemics, wars, disasters, and the ordinary cruelties that leave marks on places long after the people are gone.
        </p>
        <p>
          We research the history behind the hauntings so you can choose tours that respect the past. Our city guides cover over eighteen destinations across the United States and Europe, each written with specific dates, documented events, and local context that generic travel sites skip. Whether you're booking a midnight cemetery walk in Savannah, a Jack the Ripper tour through Whitechapel, or a paranormal investigation at Eastern State Penitentiary, you'll know exactly what you're walking into—and why it matters.
        </p>
      </div>
    </div>
  </section>

  <!-- Browse Tours CTA -->
  <section class="py-8">
    <div class="container px-4 mx-auto max-w-7xl">
      <a 
        href="/destinations/" 
        class="group relative block overflow-hidden rounded-2xl p-6 sm:p-8 lg:p-10"
        style="background: linear-gradient(to right, #581c87, #6b21a8, #4c1d95);"
      >
        <div class="relative flex flex-col items-center justify-between gap-4 sm:flex-row">
          <div>
            <h2 class="text-2xl font-bold text-white sm:text-3xl">Find Your Perfect Ghost Tour</h2>
            <p class="mt-2" style="color: #c4b5fd;">Search 3,000+ haunted experiences across 200+ cities worldwide</p>
          </div>
          <span class="inline-flex items-center gap-2 rounded-xl bg-white px-6 py-3 font-semibold transition-transform group-hover:scale-105" style="color: #581c87;">
            Browse Tours
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </div>
      </a>
    </div>
  </section>

  <!-- Dark History Section -->
  <section class="py-12">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="mb-10">
        <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white" style="font-family: 'Cinzel', serif;">Dark History & Infamy</h2>
        <p class="mt-2 text-base sm:text-lg" style="color: #7a6b8a;">Discover the most outstanding articles in all topics of life.</p>
      </div>
      
      <div class="flex flex-col gap-4 lg:gap-6">
        <!-- Dracula's Castle -->
        <a href="/destinations/draculas-castle/" class="group block">
          <div class="relative overflow-hidden rounded-2xl min-h-[200px] md:h-48" style="box-shadow: inset 0 0 80px rgba(0,0,0,0.4);">
            <img 
              src="/images/draculas-castle-banner.jpg" 
              alt="Bran Castle in Transylvania"
              class="absolute inset-0 w-full h-full object-cover"
              loading="lazy"
            >
            <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(0,0,0,0.95), rgba(0,0,0,0.6), rgba(0,0,0,0.2));"></div>
            <div class="relative z-10 h-full flex items-center p-6 md:p-8">
              <div class="max-w-lg">
                <p class="text-xs font-semibold tracking-widest uppercase mb-2" style="color: #ef4444;">Featured Destination</p>
                <h3 class="text-xl md:text-3xl font-bold text-white mb-1">Enter Dracula's Castle</h3>
                <p class="text-sm md:text-base mb-4" style="color: #d1d5db;">Where the Dracula legend lives.</p>
                <span class="inline-flex items-center gap-2 text-sm font-semibold transition-colors" style="color: #ef4444;">
                  Explore the Castle <span>→</span>
                </span>
              </div>
            </div>
          </div>
        </a>

        <!-- Salem Witch Trials -->
        <a href="/destinations/salem-witch-trials/" class="group block">
          <div class="relative overflow-hidden rounded-2xl min-h-[200px] md:h-48" style="box-shadow: inset 0 0 80px rgba(0,0,0,0.4);">
            <img 
              src="/images/banners/salem-witch-trials.jpg" 
              alt="Salem Witch Trials - Historic graveyard and church"
              class="absolute inset-0 w-full h-full object-cover"
              loading="lazy"
            >
            <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(0,0,0,0.95), rgba(0,0,0,0.6), rgba(0,0,0,0.2));"></div>
            <div class="relative z-10 h-full flex items-center p-6 md:p-8">
              <div class="max-w-lg">
                <p class="text-xs font-semibold tracking-widest uppercase mb-2" style="color: #f59e0b;">Featured Destination</p>
                <h3 class="text-xl md:text-3xl font-bold text-white mb-1">Salem Witch Trials</h3>
                <p class="text-sm md:text-base mb-4" style="color: #d1d5db;">The infamous trials that gripped colonial Massachusetts.</p>
                <span class="inline-flex items-center gap-2 text-sm font-semibold transition-colors" style="color: #f59e0b;">
                  Explore Salem <span>→</span>
                </span>
              </div>
            </div>
          </div>
        </a>

        <!-- Tower of London -->
        <a href="/destinations/tower-of-london/" class="group block">
          <div class="relative overflow-hidden rounded-2xl min-h-[200px] md:h-48" style="box-shadow: inset 0 0 80px rgba(0,0,0,0.4);">
            <img 
              src="/images/banners/tower-of-london.png" 
              alt="Tower of London"
              class="absolute inset-0 w-full h-full object-cover"
              loading="lazy"
            >
            <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(0,0,0,0.95), rgba(0,0,0,0.6), rgba(0,0,0,0.2));"></div>
            <div class="relative z-10 h-full flex items-center p-6 md:p-8">
              <div class="max-w-lg">
                <p class="text-xs font-semibold tracking-widest uppercase mb-2" style="color: #ef4444;">Featured Destination</p>
                <h3 class="text-xl md:text-3xl font-bold text-white mb-1">Unlock the Secrets of the Tower</h3>
                <p class="text-sm md:text-base mb-4" style="color: #d1d5db;">Experience one of the world's most famous fortresses</p>
                <span class="inline-flex items-center gap-2 text-sm font-semibold transition-colors" style="color: #ef4444;">
                  Get Tickets <span>→</span>
                </span>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Cities Grid -->
  <section class="py-12" id="cities">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="mb-10">
        <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white" style="font-family: 'Cinzel', serif;">Explore Haunted Destinations</h2>
        <p class="mt-2 text-base sm:text-lg" style="color: #7a6b8a;">Find ghost tours in haunted cities worldwide</p>
      </div>
      
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:gap-6">
        {cities.map((city) => (
          <a 
            href={`/${city.slug}/`}
            class="group relative block aspect-[4/3] overflow-hidden rounded-2xl"
          >
            <img 
              src={city.image}
              alt={`Ghost tours in ${city.name}`}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            >
            <div class="pointer-events-none absolute inset-0 rounded-2xl" style="background: linear-gradient(to top, rgba(0,0,0,0.45), rgba(0,0,0,0.18), rgba(0,0,0,0.05));"></div>
            <div class="absolute bottom-0 left-0 right-0 p-3 sm:p-4">
              <h3 class="text-sm font-semibold text-white sm:text-base lg:text-lg" style="text-shadow: 0 2px 6px rgba(0,0,0,0.6);">
                {city.name}
              </h3>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- More Places Section -->
  <section class="py-12">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="mb-10">
        <h2 class="text-xl font-semibold sm:text-2xl md:text-3xl text-white" style="font-family: 'Cinzel', serif;">More Places of Dark History</h2>
        <p class="mt-2 text-base sm:text-lg" style="color: #7a6b8a;">Discover the most outstanding articles in all topics of life.</p>
      </div>
      
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 lg:gap-6">
        <a 
          href="/destinations/eastern-state-penitentiary/"
          class="group rounded-xl p-5 transition-all duration-200"
          style="border: 1px solid #3d2a4d; background: rgba(26, 16, 37, 0.5);"
          onmouseover="this.style.borderColor='#7c3aed'; this.style.background='rgba(26, 16, 37, 0.8)'"
          onmouseout="this.style.borderColor='#3d2a4d'; this.style.background='rgba(26, 16, 37, 0.5)'"
        >
          <h3 class="text-base font-semibold text-white sm:text-lg group-hover:text-purple-300">Eastern State Penitentiary</h3>
          <p class="mt-2 text-sm leading-relaxed" style="color: #7a6b8a;">Philadelphia's infamous abandoned prison, where solitary confinement drove inmates to madness.</p>
        </a>
        <a 
          href="/destinations/gettysburg/"
          class="group rounded-xl p-5 transition-all duration-200"
          style="border: 1px solid #3d2a4d; background: rgba(26, 16, 37, 0.5);"
          onmouseover="this.style.borderColor='#7c3aed'; this.style.background='rgba(26, 16, 37, 0.8)'"
          onmouseout="this.style.borderColor='#3d2a4d'; this.style.background='rgba(26, 16, 37, 0.5)'"
        >
          <h3 class="text-base font-semibold text-white sm:text-lg group-hover:text-purple-300">Gettysburg Battlefield</h3>
          <p class="mt-2 text-sm leading-relaxed" style="color: #7a6b8a;">Where 50,000 soldiers fell in three days of brutal Civil War combat.</p>
        </a>
        <a 
          href="/destinations/port-arthur/"
          class="group rounded-xl p-5 transition-all duration-200"
          style="border: 1px solid #3d2a4d; background: rgba(26, 16, 37, 0.5);"
          onmouseover="this.style.borderColor='#7c3aed'; this.style.background='rgba(26, 16, 37, 0.8)'"
          onmouseout="this.style.borderColor='#3d2a4d'; this.style.background='rgba(26, 16, 37, 0.5)'"
        >
          <h3 class="text-base font-semibold text-white sm:text-lg group-hover:text-purple-300">Port Arthur</h3>
          <p class="mt-2 text-sm leading-relaxed" style="color: #7a6b8a;">Tasmania's brutal penal colony, now Australia's most haunted historic site.</p>
        </a>
      </div>
    </div>
  </section>
</Layout>
