const moreCities = [
  { name: 'Boston', slug: 'boston-ghost-tours' },
  { name: 'Chicago', slug: 'chicago-ghost-tours' },
  { name: 'St. Augustine', slug: 'st-augustine-ghost-tours' },
  { name: 'New York', slug: 'new-york-ghost-tours' },
  { name: 'San Antonio', slug: 'san-antonio-ghost-tours' },
  { name: 'Washington DC', slug: 'washington-dc-ghost-tours' },
  { name: 'Nashville', slug: 'nashville-ghost-tours' },
  { name: 'Austin', slug: 'austin-ghost-tours' },
  { name: 'Denver', slug: 'denver-ghost-tours' },
  { name: 'Key West', slug: 'key-west-ghost-tours' },
  { name: 'Dublin', slug: 'dublin-ghost-tours' },
  { name: 'Rome', slug: 'rome-ghost-tours' },
  { name: 'Paris', slug: 'paris-ghost-tours' },
];

const experiences = [
  { name: 'Walking Tours', slug: '/experiences/walking-tours/', icon: 'M13 10V3L4 14h7v7l9-11h-7z', description: 'Guided walks through historic haunted districts' },
  { name: 'Cemetery Tours', slug: '/experiences/cemetery-tours/', icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4', description: 'Centuries of stories beneath the headstones' },
  { name: 'Paranormal Investigations', slug: '/experiences/paranormal-investigations/', icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z', description: 'EMF readers, spirit boxes & hands-on evidence' },
  { name: 'Pub Crawls', slug: '/experiences/pub-crawls/', icon: 'M12 8c-2.21 0-4 .895-4 2s1.79 2 4 2 4-.895 4-2-1.79-2-4-2zM12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z', description: 'Spirits of the liquid and spectral variety' },
];

const faqs = [
  {
    question: 'Are ghost tours actually scary?',
    answer: "Most ghost tours focus on history and storytelling rather than jump scares. They range from family-friendly walking tours to more intense paranormal investigations. The best tours are genuinely educational\u2014you learn real local history through the lens of documented hauntings and tragic events."
  },
  {
    question: 'What should I wear on a ghost tour?',
    answer: "Comfortable walking shoes are essential since most tours cover 1\u20132 miles on foot. Dress for the weather and bring a light jacket\u2014evening tours can get cool. Avoid heels or sandals, especially in cities with cobblestone streets like Savannah or Edinburgh."
  },
  {
    question: 'Are ghost tours suitable for children?',
    answer: "Many ghost tours welcome children and adjust their storytelling accordingly. Walking tours and trolley tours tend to be the most family-friendly. Paranormal investigations and pub crawls are typically adults-only. Check the tour description for age recommendations before booking."
  },
  {
    question: 'What is the most haunted city in America?',
    answer: "Savannah, New Orleans, and Salem consistently rank as America\u2019s most haunted cities. Savannah\u2019s entire historic district sits on colonial-era burial grounds. New Orleans has 300 years of plague, slavery, and voodoo tradition. Salem\u2019s legacy extends beyond the 1692 witch trials into centuries of maritime disaster."
  },
  {
    question: 'How long do most ghost tours last?',
    answer: "Walking ghost tours typically run 90 minutes to 2 hours. Pub crawl tours last 2\u20133 hours with stops at haunted bars. Cemetery tours are usually 60\u201390 minutes. Paranormal investigations can run 3\u20134 hours, often starting late at night."
  },
  {
    question: 'Do ghost tours run in the rain?',
    answer: "Most walking tours operate rain or shine\u2014ghosts don\u2019t take weather days. Some operators offer ponchos or umbrellas. Trolley tours and indoor investigations aren\u2019t affected by weather at all. If conditions are severe, reputable companies will reschedule or refund."
  },
  {
    question: 'What is the difference between a ghost tour and a paranormal investigation?',
    answer: "Ghost tours are guided walks through haunted locations with historical storytelling. Paranormal investigations give you hands-on access to equipment like EMF readers, spirit boxes, and thermal cameras in documented haunted buildings. Tours are passive experiences; investigations are active participation."
  },
  {
    question: 'How do I choose the best ghost tour?',
    answer: "Look for tours with high review counts (500+), guides with local historical knowledge, and small group sizes (under 20 people). The best tours cite specific dates, names, and documented events\u2014not generic ghost stories. Avoid tours that rely on costumes or theatrical scares over real history."
  },
];

const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(f => ({
    "@type": "Question",
    "name": f.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": f.answer,
    }
  }))
};

const websiteLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Cursed Tours",
  "url": "https://cursedtours.com",
};

const organizationLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Cursed Tours",
  "url": "https://cursedtours.com",
  "logo": "https://cursedtours.com/images/logo.png",
};
import CdnImage from '../components/CdnImage.astro';
---
<Layout
  title="Ghost Tours & Haunted Experiences Worldwide | Cursed Tours"
  description="Find ghost tours in 18+ haunted cities worldwide. Walking tours, cemetery visits, pub crawls, and paranormal investigations grounded in real history."
  canonical="https://cursedtours.com/"
  ogImage="https://cursedtours.com/images/homepage-hero.webp"
  ogImageWidth={1792}
  ogImageHeight={1024}
>
  <script type="application/ld+json" set:html={JSON.stringify(websiteLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqLd)} />

  <!-- ═══════════════════════════════════════════
       HERO — Full-bleed cinematic hero
       ═══════════════════════════════════════════ -->
  <section class="relative overflow-hidden" style="min-height: clamp(480px, 75vh, 720px);">
    <!-- Background image -->
    <div class="absolute inset-0">
      <CdnImage src="/images/homepage-hero.webp" alt="Ghostly figure in a haunted house during a ghost tour" width={1536} height={1024} loading="eager" class="w-full h-full object-cover" decoding="async" />
      <!-- Gradient overlays for text readability -->
      <div class="absolute inset-0" style="background: linear-gradient(to top, #0a0510 0%, rgba(10,5,16,0.85) 30%, rgba(10,5,16,0.4) 60%, rgba(10,5,16,0.2) 100%);"></div>
      <div class="absolute inset-0" style="background: linear-gradient(to right, rgba(10,5,16,0.6) 0%, transparent 60%);"></div>
    </div>

    <!-- Hero content -->
    <div class="relative z-10 flex items-end h-full" style="min-height: clamp(480px, 75vh, 720px);">
      <div class="container px-4 mx-auto max-w-7xl pb-12 md:pb-16 lg:pb-20">
        <div class="max-w-2xl">
          <p class="text-sm font-semibold tracking-[0.2em] uppercase mb-4" style="color: #a855f7;">
            18 Cities &middot; 170+ Articles &middot; History-First Tours
          </p>
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1] text-white mb-5" style="font-family: 'Cinzel', serif;">
            The Dark History<br class="hidden sm:block" /> Behind the Hauntings
          </h1>
          <p class="text-base sm:text-lg lg:text-xl leading-relaxed mb-8 max-w-xl" style="color: #d1c4e9;">
            Documented tragedies, real locations, expert guides. Ghost tours that teach you more history than most textbooks.
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              href="#cities"
              class="inline-flex items-center gap-2 rounded-full px-7 py-3.5 text-base font-semibold text-white transition-all duration-200 hover:scale-[1.02]"
              style="background: linear-gradient(135deg, #7c3aed, #a855f7);"
            >
              Explore Cities
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </a>
            <a
              href="/articles/"
              class="inline-flex items-center gap-2 rounded-full px-7 py-3.5 text-base font-semibold transition-all duration-200"
              style="color: #e8e0f0; border: 1px solid rgba(168,155,184,0.3); background: rgba(255,255,255,0.05); backdrop-filter: blur(8px);"
            >
              Read the Research
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ═══════════════════════════════════════════
       EDITORIAL — Single compelling narrative block
       ═══════════════════════════════════════════ -->
  <section class="py-16 md:py-24">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-16 items-center">
        <!-- Text column -->
        <div class="lg:col-span-5 order-2 lg:order-1">
          <p class="text-xs font-semibold tracking-[0.2em] uppercase mb-3" style="color: #a855f7;">Why These Tours Matter</p>
          <h2 class="text-2xl sm:text-3xl font-bold text-white mb-6" style="font-family: 'Cinzel', serif; line-height: 1.2;">
            History You Won't Find in Textbooks
          </h2>
          <div class="space-y-4 text-base leading-relaxed" style="color: #c8bdd8;">
            <p>
              The best ghost tours are walking histories of real places where documented tragedies occurred. You stand where yellow fever killed thousands in <a href="/new-orleans-ghost-tours/" class="underline decoration-purple-500/40 hover:decoration-purple-400 transition-colors" style="color: #d8b4fe;">New Orleans</a>, outside the cells where accused witches awaited trial in <a href="/salem-ghost-tours/" class="underline decoration-purple-500/40 hover:decoration-purple-400 transition-colors" style="color: #d8b4fe;">Salem</a>, or descend into underground vaults where <a href="/edinburgh-ghost-tours/" class="underline decoration-purple-500/40 hover:decoration-purple-400 transition-colors" style="color: #d8b4fe;">Edinburgh</a>'s plague victims were sealed alive.
            </p>
            <p>
              Every tour we feature is selected for historical accuracy, verified reviews, and guides who cite specific dates and documented events rather than generic ghost stories.
            </p>
          </div>
          <!-- Inline stats -->
          <div class="grid grid-cols-3 gap-4 mt-8 pt-8" style="border-top: 1px solid #3d2a4d;">
            <div>
              <p class="text-2xl font-bold text-white">18+</p>
              <p class="text-xs mt-1" style="color: #7a6b8a;">Haunted cities</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-white">170+</p>
              <p class="text-xs mt-1" style="color: #7a6b8a;">Researched articles</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-white">57</p>
              <p class="text-xs mt-1" style="color: #7a6b8a;">Curated tours</p>
            </div>
          </div>
        </div>
        <!-- Image column — stacked duo -->
        <div class="lg:col-span-7 order-1 lg:order-2">
          <div class="grid grid-cols-12 gap-3">
            <div class="col-span-7 aspect-[3/4] overflow-hidden rounded-2xl">
              <CdnImage src="/images/draculas-castle-banner.webp" alt="Haunted castle at dusk shrouded in mist" width={1536} height={1024} loading="lazy" class="w-full h-full object-cover" decoding="async" />
            </div>
            <div class="col-span-5 flex flex-col gap-3">
              <div class="flex-1 overflow-hidden rounded-2xl">
                <CdnImage src="/images/cities/savannah.webp" alt="Savannah's historic Chippewa Square" width={1200} height={792} loading="lazy" class="w-full h-full object-cover" decoding="async" />
              </div>
              <div class="flex-1 overflow-hidden rounded-2xl">
                <CdnImage src="/images/cities/edinburgh.webp" alt="Edinburgh skyline at dusk" width={1200} height={800} loading="lazy" class="w-full h-full object-cover" decoding="async" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ═══════════════════════════════════════════
       FEATURED CITIES — Visual hierarchy with large + small cards
       ═══════════════════════════════════════════ -->
  <section class="py-16 md:py-24" id="cities" style="background: linear-gradient(180deg, rgba(15,10,26,0) 0%, rgba(15,10,26,0.8) 50%, rgba(15,10,26,0) 100%);">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="text-center mb-12">
        <p class="text-xs font-semibold tracking-[0.2em] uppercase mb-3" style="color: #a855f7;">Ghost Tour Cities</p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white" style="font-family: 'Cinzel', serif;">
          Choose Your Haunted City
        </h2>
        <p class="mt-3 text-base max-w-2xl mx-auto" style="color: #7a6b8a;">
          From colonial graveyards to medieval dungeons — each city has centuries of documented dark history waiting.
        </p>
      </div>

      <!-- Featured 6 — Large cards with detail -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-5 mb-8">
        {featuredCities.map((city) => (
          <a href={`/${city.slug}/`} class="group relative block overflow-hidden rounded-2xl" style="aspect-ratio: 4/3;">
            <CdnImage src={city.image} alt={`Ghost tours in ${city.name}`} width={800} height={533} loading="lazy" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" decoding="async" />
            <div class="absolute inset-0" style="background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.3) 40%, rgba(0,0,0,0.05) 100%);"></div>
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="background: linear-gradient(to top, rgba(124,58,237,0.3) 0%, transparent 50%);"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <div class="flex items-center gap-2 mb-1.5">
                <h3 class="text-lg sm:text-xl font-bold text-white" style="text-shadow: 0 2px 8px rgba(0,0,0,0.6);">{city.name}</h3>
                <span class="text-xs px-2 py-0.5 rounded-full font-medium" style="background: rgba(168,85,247,0.25); color: #d8b4fe;">{city.tours}</span>
              </div>
              <p class="text-sm" style="color: #d1d5db; text-shadow: 0 1px 4px rgba(0,0,0,0.8);">{city.tagline}</p>
            </div>
          </a>
        ))}
      </div>

      <!-- Remaining cities — compact pill links -->
      <div class="flex flex-wrap justify-center gap-2">
        {moreCities.map((city) => (
          <a
            href={`/${city.slug}/`}
            class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium transition-all duration-200"
            style="color: #c8bdd8; border: 1px solid #3d2a4d; background: rgba(26,16,37,0.5);"
            onmouseover="this.style.borderColor='#7c3aed';this.style.color='#e9d5ff';this.style.background='rgba(124,58,237,0.1)'"
            onmouseout="this.style.borderColor='#3d2a4d';this.style.color='#c8bdd8';this.style.background='rgba(26,16,37,0.5)'"
          >
            {city.name}
            <svg class="w-3.5 h-3.5 ml-1.5 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
          </a>
        ))}
      </div>
    </div>
  </section>
  <!-- ═══════════════════════════════════════════
       EXPERIENCES — Clean icon + text cards
       ═══════════════════════════════════════════ -->
  <section class="py-16 md:py-24">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 items-start">
        <div class="lg:col-span-4">
          <p class="text-xs font-semibold tracking-[0.2em] uppercase mb-3" style="color: #a855f7;">Tour Types</p>
          <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4" style="font-family: 'Cinzel', serif; line-height: 1.2;">
            Find Your Kind of Tour
          </h2>
          <p class="text-base leading-relaxed" style="color: #7a6b8a;">
            Whether you're a skeptic, a history buff, or someone who just wants a great evening out — there's a format that fits.
          </p>
          <a href="/experiences/" class="inline-flex items-center gap-2 mt-6 text-sm font-semibold transition-colors" style="color: #a855f7;" onmouseover="this.style.color='#c084fc'" onmouseout="this.style.color='#a855f7'">
            View all experiences <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
        </div>
        <div class="lg:col-span-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {experiences.map((exp) => (
              <a href={exp.slug} class="group flex gap-4 p-5 rounded-xl transition-all duration-200" style="border: 1px solid #3d2a4d; background: rgba(26,16,37,0.4);" onmouseover="this.style.borderColor='#4a3560';this.style.background='rgba(36,20,48,0.7)'" onmouseout="this.style.borderColor='#3d2a4d';this.style.background='rgba(26,16,37,0.4)'">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center" style="background: rgba(168,85,247,0.12);">
                  <svg class="w-5 h-5" style="color: #a855f7;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={exp.icon} />
                  </svg>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-white group-hover:text-purple-300 transition-colors">{exp.name}</h3>
                  <p class="text-sm mt-1" style="color: #7a6b8a;">{exp.description}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ═══════════════════════════════════════════
       DESTINATIONS — Feature banners
       ═══════════════════════════════════════════ -->
  <section class="py-16 md:py-24" style="background: linear-gradient(180deg, rgba(15,10,26,0) 0%, rgba(15,10,26,0.6) 50%, rgba(15,10,26,0) 100%);">
    <div class="container px-4 mx-auto max-w-7xl">
      <div class="text-center mb-12">
        <p class="text-xs font-semibold tracking-[0.2em] uppercase mb-3" style="color: #a855f7;">Deep Dives</p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white" style="font-family: 'Cinzel', serif;">
          Iconic Haunted Destinations
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 lg:gap-5">
        <!-- Dracula's Castle -->
        <a href="/destinations/draculas-castle/" class="group relative block overflow-hidden rounded-2xl" style="aspect-ratio: 3/4;">
          <CdnImage src="/images/draculas-castle-banner.webp" alt="Bran Castle in Transylvania" width={1536} height={1024} loading="lazy" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" decoding="async" />
          <div class="absolute inset-0" style="background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.1) 100%);"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6">
            <h3 class="text-xl font-bold text-white mb-1">Dracula's Castle</h3>
            <p class="text-sm mb-3" style="color: #d1d5db;">Where the Dracula legend began — Bran Castle in the Carpathian Mountains.</p>
            <span class="inline-flex items-center gap-1.5 text-xs font-semibold" style="color: #ef4444;">Explore <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg></span>
          </div>
        </a>

        <!-- Salem Witch Trials -->
        <a href="/destinations/salem-witch-trials/" class="group relative block overflow-hidden rounded-2xl" style="aspect-ratio: 3/4;">
          <CdnImage src="/images/banners/salem-witch-trials.webp" alt="Salem Witch Trials historic graveyard" width={1536} height={1024} loading="lazy" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" decoding="async" />
          <div class="absolute inset-0" style="background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.1) 100%);"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6">
            <h3 class="text-xl font-bold text-white mb-1">Salem Witch Trials</h3>
            <p class="text-sm mb-3" style="color: #d1d5db;">The 1692 trials that executed 20 innocent people and gripped colonial Massachusetts.</p>
            <span class="inline-flex items-center gap-1.5 text-xs font-semibold" style="color: #f59e0b;">Explore <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg></span>
          </div>
        </a>

        <!-- Tower of London -->
        <a href="/destinations/tower-of-london/" class="group relative block overflow-hidden rounded-2xl" style="aspect-ratio: 3/4;">
          <CdnImage src="/images/banners/tower-of-london.png" alt="Tower of London" width={1536} height={1024} loading="lazy" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" decoding="async" />
          <div class="absolute inset-0" style="background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.1) 100%);"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6">
            <h3 class="text-xl font-bold text-white mb-1">Tower of London</h3>
