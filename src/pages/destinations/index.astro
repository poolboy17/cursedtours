---
import Layout from '../../layouts/Layout.astro';
import { DESTINATIONS } from '../../data/destinations';

const destinations = Object.values(DESTINATIONS);
---

<Layout
  title="Haunted Destinations & Dark History | Cursed Tours"
  description="Explore the world's most haunted destinationsâ€”from Alcatraz and Eastern State Penitentiary to Dracula's Castle and the Tower of London."
  canonical="https://cursedtours.com/destinations/"
>
  <section class="relative py-12 md:py-20 overflow-hidden bg-[#0a0510]">
    <div class="container relative z-10 px-4 mx-auto max-w-6xl">
      <nav class="mb-6 text-sm">
        <ol class="flex items-center gap-2 text-[#a89bb8]">
          <li><a href="/" class="hover:text-purple-400 transition-colors">Home</a></li>
          <li class="text-gray-600">/</li>
          <li class="text-gray-300 font-medium">Destinations</li>
        </ol>
      </nav>
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">Haunted Destinations</h1>
        <p class="text-xl text-[#a89bb8] max-w-2xl mx-auto">
          The world's most documented sites of dark history, paranormal activity, and supernatural encounters.
        </p>
      </div>
    </div>
  </section>

  <section class="py-12 md:py-16 bg-[#0a0510]">
    <div class="container px-4 mx-auto max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {destinations.map((dest) => {
          const heroTour = dest.featuredTours?.find(t => t.tier === 'hero');
          return (
            <a
              href={`/destinations/${dest.slug}/`}
              class="group block rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300"
            >
              {heroTour && (
                <div class="aspect-video overflow-hidden">
                  <img
                    src={heroTour.image}
                    alt={dest.name}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-6">
                <h2 class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors mb-2">
                  {dest.name}
                </h2>
                <p class="text-gray-400 line-clamp-2">{dest.descriptor}</p>
                {dest.featuredTours && dest.featuredTours.length > 0 && (
                  <p class="text-sm text-purple-400 mt-3">{dest.featuredTours.length} tours available</p>
                )}
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
