---
import Layout from '../../layouts/Layout.astro';
import TourSidebar from '../../components/TourSidebar.astro';
import { DESTINATIONS } from '../../data/destinations';
import { getAllArticles } from '../../data/articles';

export async function getStaticPaths() {
  return Object.values(DESTINATIONS).map(dest => ({
    params: { slug: dest.slug },
    props: { destination: dest },
  }));
}

const { destination } = Astro.props;

const allArticles = getAllArticles();
const relatedArticles = (destination.relatedArticleSlugs || [])
  .map((slug: string) => allArticles.find(a => a.slug === slug))
  .filter(Boolean);

const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": destination.faq.map((item: any) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": { "@type": "Answer", "text": item.answer }
  }))
};
const attractionLd = {
  "@context": "https://schema.org",
  "@type": "TouristAttraction",
  "name": destination.name,
  "description": destination.descriptor,
  "url": `https://cursedtours.com/destinations/${destination.slug}/`,
};
const breadcrumbLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://cursedtours.com/" },
    { "@type": "ListItem", "position": 2, "name": "Destinations", "item": "https://cursedtours.com/destinations/" },
    { "@type": "ListItem", "position": 3, "name": destination.name, "item": `https://cursedtours.com/destinations/${destination.slug}/` },
  ]
};

const tours = destination.featuredTours || [];
const heroTour = tours.find((t: any) => t.tier === 'hero');
const otherTours = tours.filter((t: any) => t.tier !== 'hero');
---

<Layout
  title={`${destination.name} Ghost Tours | Cursed Tours`}
  description={`${destination.descriptor}. Explore ghost tours and dark history at ${destination.name}.`}
  canonical={`https://cursedtours.com/destinations/${destination.slug}/`}
>
  <script type="application/ld+json" set:html={JSON.stringify(faqLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(attractionLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbLd)} />

  <!-- Hero -->
  <section class="relative overflow-hidden bg-[#0a0510]">
    {destination.heroImage && (
      <div class="absolute pointer-events-none z-[1] hidden sm:block" style="top: -20px; right: -5%; width: 75%; max-width: 900px; height: calc(100% + 20px);">
        <img src={destination.heroImage.src} alt="" aria-hidden="true"
          class="w-full h-full object-contain" style="object-position: right center;"
          loading="eager" decoding="async" width="1536" height="1024" />
      </div>
    )}
    <div class="relative z-10 flex items-end md:min-h-[55vh]">
      <div class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 pt-8 pb-10 sm:pt-10 sm:pb-12 md:pt-0 md:pb-14">
        <div class="max-w-xl">
          <nav class="mb-4 text-sm">
            <ol class="flex items-center gap-2 text-[#7a6e8c]">
              <li><a href="/" class="text-[#8a7e9c] hover:text-purple-400 transition-colors">Home</a></li>
              <li class="text-[#4a3f5a]">/</li>
              <li><a href="/destinations/" class="text-[#8a7e9c] hover:text-purple-400 transition-colors">Destinations</a></li>
              <li class="text-[#4a3f5a]">/</li>
              <li class="text-[#a89bb8] font-medium">{destination.name}</li>
            </ol>
          </nav>
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1] text-white mb-4" style="font-family: 'Cinzel', serif;">{destination.name}</h1>
      {destination.subtitle && (
        <p class="text-lg md:text-xl text-purple-400 font-medium mb-4">{destination.subtitle}</p>
      )}
      <p class="text-base sm:text-lg leading-relaxed mb-5 max-w-lg" style="color: #d1c4e9;">{destination.descriptor}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  {destination.intro && (
    <section class="pt-12 md:pt-16 bg-[#0a0510]">
      <div class="container px-4 mx-auto max-w-6xl">
        <p class="text-xl text-gray-300 leading-relaxed italic border-l-3 border-purple-500 pl-6 max-w-4xl">
          {destination.intro}
        </p>
      </div>
    </section>
  )}

  <!-- Main content with sticky sidebar -->
  <section class="py-12 md:py-16 bg-[#0a0510]">
    <div class="container px-4 mx-auto max-w-6xl">
      <div class="lg:flex lg:gap-10">

        <!-- Left column: video, text, articles, FAQ -->
        <div class="lg:w-2/3">

          {/* YouTube embed */}
          {destination.youtubeId && (
            <div class="mb-10 rounded-lg overflow-hidden aspect-video">
              <iframe
                src={`https://www.youtube.com/embed/${destination.youtubeId}`}
                title={`${destination.name} video`}
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen loading="lazy" class="w-full h-full"
              ></iframe>
            </div>
          )}

          {/* Why It Matters */}
          <div class="text-gray-300 text-lg leading-relaxed mb-12">
            <h2 class="text-2xl font-bold text-white mb-4">Why It Matters</h2>
            <p>{destination.whyItMatters}</p>
          </div>

          {/* Content Sections */}
          {destination.sections && destination.sections.length > 0 && (
            <div class="space-y-12 mb-16">
              {destination.sections.map((section: any) => (
                <div class="text-gray-300 text-lg leading-relaxed">
                  <h2 class="text-2xl font-bold text-white mb-4">{section.heading}</h2>
                  <p>{section.body}</p>
                  {section.image && (
                    <figure class="mt-6">
                      <img src={section.image.src} alt={section.image.alt}
                        class="w-full rounded-lg" width="1200" height="675" loading="lazy" decoding="async" />
                      <figcaption class="text-sm text-gray-500 mt-2 italic">{section.image.alt}</figcaption>
                    </figure>
                  )}
                </div>
              ))}
            </div>
          )}

          {/* FAQ â€” placed before articles to support buying-intent questions near CTAs */}
          {destination.faq.length > 0 && (
            <div class="mb-16">
              <h2 class="text-2xl md:text-3xl font-bold text-white mb-8">Frequently Asked Questions</h2>
              <div class="space-y-4">
                {destination.faq.map((item: any) => (
                  <details class="group bg-white/5 border border-white/10 rounded-lg overflow-hidden">
                    <summary class="flex items-center justify-between p-5 cursor-pointer text-white font-medium hover:text-purple-400 transition-colors">
                      {item.question}
                      <span class="text-gray-500 group-open:rotate-180 transition-transform">â–¼</span>
                    </summary>
                    <div class="px-5 pb-5 text-gray-400 leading-relaxed">
                      {item.answer}
                    </div>
                  </details>
                ))}
              </div>
            </div>
          )}

          {/* Related Articles â€” capped at 6, with link to see all */}
          {relatedArticles.length > 0 && (
            <div class="mb-8">
              <h2 class="text-2xl md:text-3xl font-bold text-white mb-8">Related Articles</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {relatedArticles.slice(0, 6).map((article: any) => (
                  <a href={`/articles/${article.slug}/`}
                    class="group block rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300">
                    {article.featuredImage?.sourceUrl && (
                      <div class="aspect-video overflow-hidden">
                        <img src={article.featuredImage.sourceUrl}
                          alt={article.featuredImage.altText || article.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          width="800" height="450" loading="lazy" decoding="async" />
                      </div>
                    )}
                    <div class="p-4">
                      <h3 class="text-white font-semibold group-hover:text-purple-400 transition-colors mb-2">
                        {article.title}
                      </h3>
                      {article.excerpt && (
                        <p class="text-sm text-gray-400 line-clamp-2">{article.excerpt}</p>
                      )}
                    </div>
                  </a>
                ))}
              </div>
              {relatedArticles.length > 6 && (
                <div class="mt-6 text-center">
                  <a href="/blog/vampire-culture/" class="inline-block px-6 py-3 rounded-lg bg-white/5 border border-white/10 text-purple-400 hover:border-purple-500/50 hover:text-purple-300 transition-all text-sm font-medium">
                    View all {relatedArticles.length} related articles â†’
                  </a>
                </div>
              )}
            </div>
          )}

        </div>

        <!-- Sticky sidebar: tour CTAs (desktop only) -->
        {tours.length > 0 && (
          <TourSidebar tours={tours} />
        )}

      </div>
    </div>
  </section>

  <!-- All Tours â€” hidden on desktop only for enriched pages (which have sticky sidebar) -->
  {tours.length > 0 && (
    <section class:list={["py-12 md:py-16 bg-[#0f0a1a] border-t border-white/5", destination.sections?.length ? "lg:hidden" : ""]} id="all-tours">
      <div class="container px-4 mx-auto max-w-6xl">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-8">All Tours</h2>

        {heroTour && (
          <a href={heroTour.viatorUrl} target="_blank" rel="noopener noreferrer nofollow"
            class="group block mb-8 rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300 md:flex">
            <div class="md:w-2/5 aspect-video md:aspect-auto overflow-hidden">
              <img src={heroTour.image} alt={heroTour.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                width="720" height="480" loading="lazy" decoding="async" />
            </div>
            <div class="p-6 md:w-3/5 flex flex-col justify-center">
              <span class="text-xs text-yellow-400 font-medium uppercase tracking-wider mb-2">Top Pick</span>
              <h3 class="text-xl md:text-2xl font-bold text-white group-hover:text-purple-400 transition-colors mb-3">
                {heroTour.title}
              </h3>
              <div class="flex items-center gap-4 text-sm text-gray-400 mb-4">
                <span class="text-yellow-400">â˜… {heroTour.rating}</span>
                <span>({heroTour.reviews.toLocaleString()} reviews)</span>
                {heroTour.duration && <span>{heroTour.duration}</span>}
              </div>
              <div class="flex items-center gap-4">
                <span class="text-2xl font-bold text-white">From {heroTour.price}</span>
                <span class="px-4 py-2 rounded-lg bg-purple-600 text-white text-sm font-semibold group-hover:bg-purple-500 transition-colors">
                  View Tour â†’
                </span>
              </div>
            </div>
          </a>
        )}

        {otherTours.length > 0 && (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {otherTours.map((tour: any) => (
              <a href={tour.viatorUrl} target="_blank" rel="noopener noreferrer nofollow"
                class="group block rounded-lg overflow-hidden bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-300">
                <div class="aspect-video overflow-hidden">
                  <img src={tour.image} alt={tour.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    width="720" height="480" loading="lazy" decoding="async" />
                </div>
                <div class="p-4">
                  <span class="text-xs text-purple-400 uppercase tracking-wider">
                    {tour.tier === 'budget' ? 'ðŸ’° Best Value' : tour.tier === 'premium' ? 'âœ¨ Premium' : 'ðŸ”„ Alternative'}
                  </span>
                  <h3 class="text-white font-semibold group-hover:text-purple-400 transition-colors mt-1 mb-2">
                    {tour.title}
                  </h3>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-400">
                      <span class="text-yellow-400">â˜… {tour.rating}</span> ({tour.reviews.toLocaleString()})
                    </span>
                    <span class="text-white font-bold">From {tour.price}</span>
                  </div>
                  {tour.duration && <p class="text-xs text-gray-500 mt-1">{tour.duration}</p>}
                </div>
              </a>
            ))}
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Related Destinations -->
  {destination.relatedDestinations?.length > 0 && (
    <section class="py-12 md:py-16 bg-[#0f0a1a] border-t border-white/5">
      <div class="container px-4 mx-auto max-w-4xl">
        <h2 class="text-2xl font-bold text-white mb-6">Explore More Destinations</h2>
        <div class="flex flex-wrap gap-3">
          {destination.relatedDestinations.map((rd: any) => (
            <a href={`/destinations/${rd.slug}/`}
              class="px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-gray-300 hover:border-purple-500/50 hover:text-purple-400 transition-all">
              {rd.name}
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Authoritative Sources -->
  {destination.authoritativeSources?.length > 0 && (
    <section class="py-8 bg-[#0a0510] border-t border-white/5">
      <div class="container px-4 mx-auto max-w-4xl">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-4">Sources & Further Reading</h3>
        <div class="flex flex-wrap gap-4">
          {destination.authoritativeSources.map((src: any) => (
            <a href={src.url} target="_blank" rel="noopener noreferrer"
              class="text-sm text-purple-400 hover:text-purple-300 underline underline-offset-2 transition-colors">
              {src.name} ({src.type})
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>
